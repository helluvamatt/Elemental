<Window x:Class="Elemental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elemental"
        mc:Ignorable="d"
		Loaded="Window_Loaded"
        Title="Elemental" Height="600" Width="800">

	<Grid Name="Workbench">
		<Grid.Resources>
			<!-- Element Item template -->
			<ControlTemplate x:Key="ElementItemTemplate" TargetType="local:ElementContentItem">
				<Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Element}">
					<Rectangle Fill="Transparent" StrokeDashArray="1 2" Stroke="Black" />
					<Image Source="{Binding Path=Icon}" Width="48" Height="48" IsHitTestVisible="False" Margin="12,0,12,24" />
					<Label Content="{Binding Path=Name}" Width="72" Height="12" Padding="0,0,0,0" FontSize="10" HorizontalContentAlignment="Center" IsHitTestVisible="False" Margin="0,48,0,0" />
				</Grid>
			</ControlTemplate>
		</Grid.Resources>
	</Grid>
</Window>
